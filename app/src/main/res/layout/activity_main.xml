<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">


    <RelativeLayout
         android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="#DCDCDC">

        <ImageView

            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/image1"
            android:src="@drawable/ic_menu_black_24dp"
            android:layout_margin="10dp"
            android:clickable="true"
            />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:layout_below="@+id/image1"
        android:id="@+id/text1"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="30dp"
        android:padding="2dp"
        android:layout_centerInParent="true"/>
    <LinearLayout
        android:layout_below="@id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="0dp"

        >


        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/boder2"
            android:orientation="horizontal"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:id="@+id/lay1"

            >

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/buy"/>
            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buy a car"
                    android:textColor="#000"
                    android:id="@+id/button1"
                    android:textAllCaps="false"
                    android:fontFamily="serif"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    />

                <TextView
                    android:id="@+id/text3"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="get the best car deals in the markert"
                    android:textColor="#000" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/boder2"
            android:orientation="horizontal"
            android:layout_marginLeft="25dp"
            android:id="@+id/lay2"
            android:layout_marginRight="25dp"

            >

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/service"
                android:layout_marginBottom="10dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Service"
                    android:textColor="#000"
                    android:fontFamily="serif"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:id="@+id/button2"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="Get your car serviced by our proffessional team"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/boder2"
            android:orientation="horizontal"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:id="@+id/lay3"

            >

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/repair"
                android:layout_marginBottom="10dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Repair"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000"
                    android:textAllCaps="false"
                    android:fontFamily="serif"
                    android:id="@+id/button3"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text=" Get your car repaired fast."
                    />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/boder2"
            android:orientation="horizontal"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:id="@+id/lay4"
            >

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/journey"
                android:layout_marginBottom="10dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layout3"
                >
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Myjourney"
                    android:textAllCaps="false"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000"
                    android:id="@+id/text6"
                    android:fontFamily="serif"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    />

                <TextView
                    android:id="@+id/text7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="Know your travel expenses"
                    />
            </LinearLayout>
        </LinearLayout>



    </LinearLayout>


</RelativeLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/boders2"
        app:itemTextColor="#000"
        app:itemIconTint="#000"
        app:menu="@menu/drawermenu"
        android:layout_gravity="start">



    </android.support.design.widget.NavigationView>







</android.support.v4.widget.DrawerLayout>